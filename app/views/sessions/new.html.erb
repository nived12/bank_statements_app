<!-- AUTHENTICATION PAGE: Sign In Form -->
<main class="auth-page">
  
  <!-- LANGUAGE SWITCHER: Top Right Corner -->
  <aside class="auth-language-switcher">
    <%= render 'shared/language_switcher', fixed_position: true %>
  </aside>

  <!-- BRAND SECTION: Left Side Logo and Title -->
  <section class="auth-brand-section">
    <div class="auth-brand-container">
      <div class="auth-brand-logo">
        <svg class="auth-brand-logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
        </svg>
      </div>
      <h1 class="auth-brand-title">BankStatements</h1>
      <p class="auth-brand-subtitle">Your financial data, simplified.</p>
    </div>
  </section>

  <!-- FORM SECTION: Center Login Form -->
  <section class="auth-form-section">
    <div class="auth-form-container">
      
      <!-- FORM CARD: Main Container -->
      <div class="auth-form-card">
        
        <!-- FORM HEADER: Title and Subtitle -->
        <header class="auth-form-header">
          <h2 class="auth-form-title"><%= t('sign_in') %></h2>
          <p class="auth-form-subtitle"><%= t('welcome_back_dashboard') %></p>
        </header>

        <!-- FORM CONTENT: All Form Elements -->
        <div class="auth-form">
          
          <!-- LOGIN FORM: Email and Password -->
          <form action="/session" method="post" class="auth-form-field">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            
            <!-- EMAIL FIELD -->
            <div class="auth-field-group">
              <label for="email" class="auth-field-label">
                <%= t('email') %>
              </label>
              <input 
                id="email" 
                name="email" 
                type="email" 
                autocomplete="email" 
                required 
                class="auth-field-input" 
                placeholder="<%= t('email_placeholder') %>"
                value="<%= params[:email] %>"
              >
            </div>

            <!-- PASSWORD FIELD -->
            <div class="auth-field-group">
              <label for="password" class="auth-field-label">
                <%= t('password') %>
              </label>
              <input 
                id="password" 
                name="password" 
                type="password" 
                autocomplete="current-password" 
                required 
                class="auth-field-input" 
                placeholder="<%= t('password_placeholder') %>"
              >
            </div>

            <!-- ERROR MESSAGES: Flash Alerts -->
            <% if flash[:alert] %>
              <div class="auth-field-error">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="auth-field-error-icon" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="auth-field-error-text">
                      <%= flash[:alert] %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- SUBMIT BUTTON: Sign In -->
            <div class="auth-submit-container">
              <button type="submit" class="auth-submit-button">
                <%= t('sign_in') %>
              </button>
            </div>
          </form>

          <!-- DIVIDER: OR Separator -->
          <div class="auth-divider">
            <div class="auth-divider-line">
              <div class="auth-divider-border"></div>
            </div>
            <div class="auth-divider-text">
              <span class="auth-divider-label"><%= t('or') %></span>
            </div>
          </div>

          <!-- OAUTH SECTION: Social Login Options -->
          <div class="auth-oauth-section">
            
            <!-- GOOGLE OAUTH -->
            <button class="auth-oauth-button">
              <svg class="auth-oauth-icon" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <%= t('continue_with_google') %>
            </button>

            <!-- APPLE OAUTH -->
            <button class="auth-oauth-button">
              <svg class="auth-oauth-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              <%= t('continue_with_apple') %>
            </button>

            <!-- GITHUB OAUTH -->
            <button class="auth-oauth-button">
              <svg class="auth-oauth-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <%= t('continue_with_github') %>
            </button>
          </div>

          <!-- ACCOUNT LINKS: Sign Up and Navigation -->
          <div class="auth-account-links">
            <p class="auth-account-text">
              <%= t('dont_have_account') %> 
              <a href="/users/new" class="auth-account-link">
                <%= t('sign_up_here') %>
              </a>
            </p>
          </div>
        </div>

        <!-- FOOTER: Terms and Privacy -->
        <footer class="auth-footer">
          <p class="auth-footer-text">
            <%= t('terms_privacy') %>
          </p>
        </footer>
      </div>
    </div>
  </section>

  <!-- PLACEHOLDER SECTION: Right Side Image and Text -->
  <section class="auth-placeholder-section">
    <div class="auth-placeholder-container">
      <div class="auth-placeholder-image">
        <svg class="auth-placeholder-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <h3 class="auth-placeholder-title"><%= t('financial_dashboard') %></h3>
      <p class="auth-placeholder-description"><%= t('financial_dashboard_description') %></p>
    </div>
  </section>
</main>
