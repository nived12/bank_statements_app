<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= t('transactions_title') %></h1>
          <p class="mt-2 text-gray-600"><%= t('transactions_description') %></p>
        </div>
        <div class="flex items-center space-x-3">
          <a href="/statement_files/new" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
            </svg>
            <%= t('upload_statement') %>
          </a>
        </div>
      </div>
    </div>

    <!-- Filter Section -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 mb-8">
      <%= form_with url: "/transactions", method: :get, local: true, class: "flex flex-wrap items-center gap-4" do %>
        <div class="flex-1 min-w-64">
          <label for="bank_account_id" class="block text-sm font-medium text-gray-700 mb-2"><%= t('bank_account_filter') %></label>
          <select name="bank_account_id" id="bank_account_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" onchange="this.form.submit()">
            <option value=""><%= t('all_accounts') %></option>
            <% @bank_accounts.each do |ba| %>
              <option value="<%= ba.id %>" <%= "selected" if params[:bank_account_id].to_s == ba.id.to_s %>>
                <%= ba.bank_name %> - ••••<%= ba.account_number.last(4) %>
              </option>
            <% end %>
          </select>
        </div>
        
        <div class="flex items-end space-x-3">
          <% if params[:bank_account_id].present? %>
            <a href="/transactions" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <%= t('clear_filter') %>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Stats Overview -->
    <div class="w-full flex justify-between mb-8">
      <div class="w-[calc(25%-12px)] bg-white rounded-lg p-4 shadow-sm border border-gray-100">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 rounded-lg">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-xs font-medium text-gray-600"><%= t('total') %></p>
            <p class="text-lg font-bold text-gray-900"><%= @transactions.count %></p>
          </div>
        </div>
      </div>

      <div class="w-[calc(25%-12px)] bg-white rounded-lg p-4 shadow-sm border border-gray-100">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 rounded-lg">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-xs font-medium text-gray-600"><%= t('income') %></p>
            <p class="text-lg font-bold text-green-600">
              <%= number_to_currency(@transactions.where(transaction_type: 'income').sum(:amount), unit: "$") %>
            </p>
          </div>
        </div>
      </div>

      <div class="w-[calc(25%-12px)] bg-white rounded-lg p-4 shadow-sm border border-gray-100">
        <div class="flex items-center">
          <div class="p-2 bg-red-100 rounded-lg">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-xs font-medium text-gray-600"><%= t('expenses') %></p>
            <p class="text-lg font-bold text-red-600">
              <%= number_to_currency(@transactions.where(transaction_type: ['fixed_expense', 'variable_expense']).sum(:amount), unit: "$") %>
            </p>
          </div>
        </div>
      </div>

      <div class="w-[calc(25%-12px)] bg-white rounded-lg p-4 shadow-sm border border-gray-100">
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 rounded-lg">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-xs font-medium text-gray-600"><%= t('categories') %></p>
            <p class="text-lg font-bold text-purple-600">
              <%= @transactions.joins(:category).distinct.count(:category_id) %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Transactions Table -->
    <% if @transactions.any? %>
      <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('date') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('description') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('amount') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('transaction_type') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('category') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @transactions.each do |transaction| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= transaction.date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div>
                      <div class="font-medium text-gray-900"><%= transaction.description %></div>
                      <% if transaction.bank_account %>
                        <div class="text-sm text-gray-500">
                          <%= transaction.bank_account.bank_name %> - ••••<%= transaction.bank_account.account_number.last(4) %>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= transaction.transaction_type == 'income' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= number_to_currency(transaction.amount, unit: "$") %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= transaction.transaction_type.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if transaction.category %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                        <%= transaction.category.name %>
                      </span>
                    <% else %>
                      <span class="text-gray-400"><%= t('no_category') %></span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <button onclick="openEditModal('<%= transaction.id %>')" class="text-blue-600 hover:text-blue-900 transition-colors duration-200">
                      <%= t('edit') %>
                    </button>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('no_transactions_yet') %></h3>
        <p class="text-gray-600 mb-6"><%= t('upload_statement_help') %></p>
        <a href="/statement_files/new" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
          <%= t('upload_statement') %>
        </a>
      </div>
    <% end %>
  </div>
</div>

<!-- Edit Transaction Modal -->
<div id="editModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('edit_transaction') %></h3>
      <form id="editForm" method="post" class="space-y-4">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('merchant') %></label>
          <input type="text" name="transaction[merchant]" id="edit_merchant" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('reference') %></label>
          <input type="text" name="transaction[reference]" id="edit_reference" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('transaction_type') %></label>
          <select name="transaction[transaction_type]" id="edit_transaction_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <% Transaction.transaction_types.keys.each do |opt| %>
              <option value="<%= opt %>"><%= opt.humanize %></option>
            <% end %>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('category') %></label>
          <select name="transaction[category_id]" id="edit_category_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value=""><%= t('no_category') %></option>
            <% current_user.categories.order(:name).each do |cat| %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% end %>
          </select>
        </div>
        
        <div class="flex justify-end space-x-3 pt-4">
          <button type="button" onclick="closeEditModal()" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
            <%= t('cancel') %>
          </button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
            <%= t('save_changes') %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function openEditModal(transactionId) {
  // Set the form action
  document.getElementById('editForm').action = `/transactions/${transactionId}`;
  
  // Show the modal
  document.getElementById('editModal').classList.remove('hidden');
}

function closeEditModal() {
  document.getElementById('editModal').classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('editModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeEditModal();
  }
});
</script>
