<!-- BANK ACCOUNTS PAGE: Account Management -->
<main class="bank-accounts-page">
  <div class="bank-accounts-main">
    
    <!-- HEADER SECTION: Page Title and Actions -->
    <header class="bank-accounts-header">
      <div class="bank-accounts-header-actions">
        <div class="bank-accounts-header-left">
          <h1 class="bank-accounts-header-title"><%= t('bank_accounts') %></h1>
          <p class="bank-accounts-header-subtitle"><%= t('manage_bank_accounts') %></p>
        </div>
        <div class="bank-accounts-header-right">
          <a href="/bank_accounts/new" class="bank-accounts-button bank-accounts-button-primary">
            <svg class="bank-accounts-button-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <%= t('add_account') %>
          </a>
        </div>
      </div>
    </header>

    <!-- STATS OVERVIEW: Account Statistics -->
    <section class="dashboard-metrics-grid">
      
      <!-- TOTAL ACCOUNTS STAT -->
      <div class="dashboard-metric-card">
        <div class="dashboard-metric-content">
          <div class="dashboard-metric-icon dashboard-metric-icon-income">
            <svg class="dashboard-metric-icon-svg dashboard-metric-icon-svg-income" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
          </div>
          <div>
            <p class="dashboard-metric-label"><%= t('total_accounts') %></p>
            <p class="dashboard-metric-value dashboard-metric-value-income"><%= @bank_accounts.count %></p>
          </div>
        </div>
      </div>

      <!-- TOTAL BALANCE STAT -->
      <div class="dashboard-metric-card">
        <div class="dashboard-metric-content">
          <div class="dashboard-metric-icon dashboard-metric-icon-expenses">
            <svg class="dashboard-metric-icon-svg dashboard-metric-icon-svg-expenses" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <div>
            <p class="dashboard-metric-label"><%= t('total_balance') %></p>
            <p class="dashboard-metric-value dashboard-metric-value-expenses">
              <%= number_to_currency(@bank_accounts.sum(&:opening_balance), unit: "$") %>
            </p>
          </div>
        </div>
      </div>

      <!-- CURRENCIES STAT -->
      <div class="dashboard-metric-card">
        <div class="dashboard-metric-content">
          <div class="dashboard-metric-icon dashboard-metric-icon-net">
            <svg class="dashboard-metric-icon-svg dashboard-metric-icon-svg-net" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div>
            <p class="dashboard-metric-label"><%= t('currencies') %></p>
            <p class="dashboard-metric-value dashboard-metric-value-net"><%= @bank_accounts.pluck(:currency).uniq.count %></p>
          </div>
        </div>
      </div>
    </section>

    <!-- BANK ACCOUNTS GRID: Account Cards -->
    <% if @bank_accounts.any? %>
      <section class="bank-accounts-grid">
        <% @bank_accounts.each do |bank_account| %>
          
          <!-- ACCOUNT CARD: Individual Bank Account -->
          <article class="bank-account-card">
            
            <!-- CARD HEADER: Account Info and Balance -->
            <div class="bank-account-card-header">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="bank-account-card-title"><%= bank_account.bank_name %></h3>
                    <p class="bank-account-card-subtitle">••••<%= bank_account.account_number.last(4) %></p>
                  </div>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= bank_account.currency %>
                  </span>
                </div>
              </div>
              
              <!-- BALANCE DISPLAY: Current Balance -->
              <div class="text-center">
                <p class="dashboard-metric-label"><%= t('current_balance') %></p>
                <p class="dashboard-metric-value dashboard-metric-value-income">
                  <%= number_to_currency(bank_account.opening_balance, unit: "$") %>
                </p>
              </div>
            </div>

            <!-- CARD ACTIONS: Edit and View Buttons -->
            <div class="bank-account-card-actions">
              <div class="bank-account-card-actions-grid">
                <a href="/bank_accounts/<%= bank_account.id %>/edit" class="bank-account-action-btn bank-account-action-btn-edit" title="<%= t('edit') %>">
                  <svg class="bank-account-action-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                </a>
                <a href="/bank_accounts/<%= bank_account.id %>" class="bank-account-action-btn bank-account-action-btn-view" title="<%= t('view') %>">
                  <svg class="bank-account-action-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        <% end %>
      </section>
    <% else %>
      
      <!-- EMPTY STATE: No Accounts Yet -->
      <section class="bank-accounts-empty">
        <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 003 3v8a3 3 0 003 3z"></path>
          </svg>
        </div>
        <h3 class="bank-accounts-empty-title"><%= t('no_bank_accounts_yet') %></h3>
        <p class="bank-accounts-empty-description"><%= t('no_bank_accounts_yet_message') %></p>
        <a href="/bank_accounts/new" class="bank-accounts-empty-action">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <%= t('add_your_first_account') %>
        </a>
      </section>
    <% end %>
  </div>
</main>
