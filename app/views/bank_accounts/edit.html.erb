<!-- BANK ACCOUNT EDIT PAGE: Update Existing Account -->
<main class="bank-accounts-page">
  <div class="bank-accounts-form">
    
    <!-- HEADER SECTION: Page Title and Back Button -->
    <header class="bank-accounts-header">
      <div class="flex items-center">
        <a href="/bank_accounts" class="mr-4 p-2 text-gray-400 hover:text-gray-600 transition-colors duration-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        </a>
        <div>
          <h1 class="bank-accounts-header-title"><%= t('edit_bank_account') %></h1>
          <p class="bank-accounts-header-subtitle"><%= t('update_account_info') %></p>
        </div>
      </div>
    </header>

    <!-- FORM CARD: Account Update Form -->
    <section class="bank-accounts-form-card">
      <%= render "form", bank_account: @bank_account %>
    </section>
  </div>
</main>
