<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100" 
     data-controller="dashboard-charts">
  
  <!-- Hidden data fields for charts -->
  <input type="hidden" id="spending-data" value="<%= (@spending_trends || []).to_json %>">
  <input type="hidden" id="category-data" value="<%= (@category_summary || []).to_json %>">
  <input type="hidden" id="balance-data" value="<%= (@bank_summaries || []).to_json %>">

  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-md border-b border-slate-200/60 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-indigo-700 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <div>
              <h1 class="text-xl font-bold text-slate-900"><%= t('financial_dashboard') %></h1>
              <p class="text-sm text-slate-600"><%= t('welcome_back') %>, <%= current_user.full_name %></p>
            </div>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="text-right">
            <p class="text-sm text-slate-600"><%= t('current_month') %></p>
            <p class="text-lg font-semibold text-slate-900">
              <%= Date.current.strftime("%B %Y") %>
            </p>
          </div>
          <div class="w-px h-8 bg-slate-300"></div>
          <a href="/statement_files/new" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-sm font-medium rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all duration-200 shadow-lg hover:shadow-xl">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <%= t('upload_statement') %>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Error Display -->
    <% if @error %>
      <div class="mb-8 bg-red-50 border border-red-200 rounded-2xl p-6">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-medium text-red-800"><%= t('dashboard_error') %></h3>
            <p class="text-red-700"><%= @error %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Total Balance Card -->
    <div class="mb-8">
      <div class="bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 rounded-3xl p-8 text-white shadow-2xl">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-medium text-slate-300 mb-2"><%= t('total_portfolio_balance') %></h2>
            <div class="text-5xl font-bold mb-2">
              <%= format_currency(@total_balance) %>
            </div>
            <p class="text-slate-400 text-lg">
              <%= t('across_accounts', count: @bank_accounts.count) %>
            </p>
          </div>
          <div class="text-right">
            <div class="w-24 h-24 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Monthly Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="metric-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600 mb-1"><%= t('monthly_income') %></p>
            <p class="text-3xl font-bold text-green-600">
              <%= format_currency(@monthly_summary[:income]) %>
            </p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="metric-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600 mb-1"><%= t('monthly_expenses') %></p>
            <p class="text-3xl font-bold text-red-600">
              <%= format_currency(@monthly_summary[:expenses]) %>
            </p>
          </div>
          <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="metric-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-600 mb-1"><%= t('net_flow') %></p>
            <p class="text-3xl font-bold <%= @monthly_summary[:net] >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= format_currency(@monthly_summary[:net]) %>
            </p>
          </div>
          <div class="w-12 h-12 <%= @monthly_summary[:net] >= 0 ? 'bg-green-100' : 'bg-red-100' %> rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 <%= @monthly_summary[:net] >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Bank Accounts Overview -->
      <div class="dashboard-card p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-slate-900"><%= t('bank_accounts_overview') %></h3>
          <a href="/bank_accounts" class="text-blue-600 hover:text-blue-700 text-sm font-medium"><%= t('view_all') %></a>
        </div>
        
        <% if @bank_summaries.any? %>
          <div class="space-y-4">
            <% @bank_summaries.each do |summary| %>
              <div class="flex items-center justify-between p-4 bg-slate-50 rounded-xl hover:bg-slate-100 transition-colors duration-200">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-slate-900"><%= summary[:account].bank_name %></p>
                    <p class="text-sm text-slate-600"><%= summary[:account].account_number %></p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-slate-900">
                    <%= format_currency(summary[:balance]) %>
                  </p>
                  <p class="text-xs text-slate-500"><%= summary[:transaction_count] %> <%= t('transactions') %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 text-slate-500">
            <svg class="w-16 h-16 mx-auto mb-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            <p class="text-lg font-medium"><%= t('no_bank_accounts_yet') %></p>
            <p class="text-sm"><%= t('add_first_bank_account') %></p>
            <a href="/bank_accounts/new" class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
              <%= t('add_bank_account') %>
            </a>
          </div>
        <% end %>
      </div>

      <!-- Spending Trends Chart -->
      <div class="dashboard-card p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-slate-900"><%= t('spending_trends') %></h3>
          <span class="text-sm text-slate-500"><%= t('last_6_months') %></span>
        </div>
        
        <% if @spending_trends.any? %>
          <div class="h-64">
            <canvas data-dashboard-charts-target="spendingChart"></canvas>
          </div>
          
          <div class="mt-4 text-center">
            <p class="text-sm text-slate-600">
              <%= t('total') %>: <%= format_currency(@spending_trends.sum { |t| t[:amount] }) %>
            </p>
          </div>
        <% else %>
          <div class="h-64 flex items-center justify-center text-slate-500">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto mb-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <p class="text-lg font-medium"><%= t('no_spending_data_yet') %></p>
              <p class="text-sm"><%= t('upload_statements_to_see_spending_trends') %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Category Breakdown Chart -->
      <div class="dashboard-card p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-slate-900"><%= t('spending_by_category') %></h3>
          <a href="/categories" class="text-blue-600 hover:text-blue-700 text-sm font-medium"><%= t('manage_categories') %></a>
        </div>
        
        <% if @category_summary.any? %>
          <div class="h-64">
            <canvas data-dashboard-charts-target="categoryChart"></canvas>
          </div>
        <% else %>
          <div class="h-64 flex items-center justify-center text-slate-500">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto mb-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <p class="text-lg font-medium"><%= t('no_categories_yet') %></p>
              <p class="text-sm"><%= t('add_categories_to_see_spending_breakdown') %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Account Balances Chart -->
      <div class="dashboard-card p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-slate-900"><%= t('account_balances') %></h3>
          <span class="text-sm text-slate-500"><%= t('current_balances') %></span>
        </div>
        
        <% if @bank_summaries.any? %>
          <div class="h-64">
            <canvas data-dashboard-charts-target="balanceChart"></canvas>
          </div>
        <% else %>
          <div class="h-64 flex items-center justify-center text-slate-500">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto mb-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <p class="text-lg font-medium"><%= t('no_accounts_yet') %></p>
              <p class="text-sm"><%= t('add_bank_accounts_to_see_balance_chart') %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Transactions -->
    <div class="dashboard-card p-6 mb-8">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-slate-900"><%= t('recent_transactions') %></h3>
        <a href="/transactions" class="text-blue-600 hover:text-blue-700 text-sm font-medium"><%= t('view_all') %></a>
      </div>
      
      <% if @recent_transactions.any? %>
        <div class="overflow-hidden">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-slate-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"><%= t('date') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"><%= t('description') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"><%= t('category') %></th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"><%= t('account') %></th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider"><%= t('amount') %></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              <% @recent_transactions.each do |transaction| %>
                <tr class="hover:bg-slate-50 transition-colors duration-200">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                    <%= transaction.date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-900 max-w-xs truncate">
                    <%= transaction.description %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if transaction.category %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= transaction.category.name %>
                      </span>
                    <% else %>
                      <span class="text-slate-400 text-sm">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                    <%= transaction.bank_account.bank_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <span class="<%= transaction.btype_credit? ? 'text-green-600' : 'text-red-600' %>">
                      <%= transaction.btype_credit? ? '+' : '-' %><%= format_currency(transaction.amount) %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12 text-slate-500">
          <svg class="w-16 h-16 mx-auto mb-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          <p class="text-lg font-medium"><%= t('no_transactions_yet') %></p>
          <p class="text-sm"><%= t('upload_statements_to_see_transaction_history') %></p>
        </div>
      <% end %>
    </div>

    <!-- Quick Actions -->
    <div class="dashboard-card p-6">
      <h3 class="text-xl font-semibold text-slate-900 mb-6"><%= t('quick_actions') %></h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="/statement_files/new" class="quick-action-card bg-gradient-to-r from-blue-50 to-indigo-50 border-blue-200 hover:from-blue-100 hover:to-indigo-100">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors duration-200">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <div>
              <p class="font-medium text-slate-900"><%= t('upload_statement') %></p>
              <p class="text-sm text-slate-600"><%= t('add_new_bank_data') %></p>
            </div>
          </div>
        </a>

        <a href="/transactions" class="quick-action-card bg-gradient-to-r from-green-50 to-emerald-50 border-green-200 hover:from-green-100 hover:to-emerald-100">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors duration-200">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <p class="font-medium text-slate-900"><%= t('transactions') %></p>
              <p class="text-sm text-slate-600"><%= t('see_all_activity') %></p>
            </div>
          </div>
        </a>

        <a href="/bank_accounts" class="quick-action-card bg-gradient-to-r from-purple-50 to-violet-50 border-purple-200 hover:from-purple-100 hover:to-violet-100">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors duration-200">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <div>
              <p class="font-medium text-slate-900"><%= t('bank_accounts') %></p>
              <p class="text-sm text-slate-600"><%= t('update_bank_info') %></p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
