<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('create_your_account') %></h1>
      <p class="mt-2 text-gray-600">Join us to start managing your finances</p>
    </div>

    <!-- Registration Form Card -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-8">
      <%= form_with model: @user, url: "/users", method: :post, local: true, class: "space-y-6" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('first_name') %></label>
          <%= f.text_field :first_name, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('last_name') %></label>
          <%= f.text_field :last_name, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('email') %></label>
          <%= f.email_field :email, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('password') %></label>
          <%= f.password_field :password, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('password_confirmation') %></label>
          <%= f.password_field :password_confirmation, required: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          <%= t('sign_up') %>
        </button>
      <% end %>
    </div>
  </div>
</div>
