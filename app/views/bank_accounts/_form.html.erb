<!-- BANK ACCOUNT FORM: Create/Edit Account -->
<%= form_with model: bank_account, local: true, class: "bank-accounts-form-section" do |f| %>
  
  <!-- BANK NAME FIELD: Bank Institution Name -->
  <div class="bank-accounts-form-group">
    <label for="bank_account_bank_name" class="bank-accounts-form-label">
      <%= t('bank_name') %>
    </label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <%= f.text_field :bank_name, 
          required: true, 
          class: "bank-accounts-form-input pl-10",
          placeholder: t('bank_name_placeholder') %>
    </div>
  </div>

  <!-- ACCOUNT NUMBER FIELD: Account Identifier -->
  <div class="bank-accounts-form-group">
    <label for="bank_account_account_number" class="bank-accounts-form-label">
      <%= t('account_number') %>
    </label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 003 3v8a3 3 0 003 3z"></path>
        </svg>
      </div>
      <%= f.text_field :account_number, 
          required: true, 
          class: "bank-accounts-form-input pl-10",
          placeholder: t('account_number_placeholder') %>
    </div>
  </div>

  <!-- CURRENCY FIELD: Account Currency -->
  <div class="bank-accounts-form-group">
    <label for="bank_account_currency" class="bank-accounts-form-label">
      <%= t('currency') %>
    </label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
      </div>
      <%= f.text_field :currency, 
          value: (bank_account.currency || "MXN"), 
          class: "bank-accounts-form-input pl-10",
          placeholder: t('currency_placeholder') %>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= t('common_currencies') %></p>
  </div>

  <!-- OPENING BALANCE FIELD: Initial Account Balance -->
  <div class="bank-accounts-form-group">
    <label for="bank_account_opening_balance" class="bank-accounts-form-label">
      <%= t('opening_balance') %>
    </label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
      </div>
      <%= f.number_field :opening_balance, 
          step: "0.01", 
          value: (bank_account.opening_balance || 0.0),
          class: "bank-accounts-form-input pl-10",
          placeholder: t('balance_placeholder') %>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= t('balance_help_text') %></p>
  </div>

  <!-- FORM ACTIONS: Submit and Cancel Buttons -->
  <div class="bank-accounts-form-actions">
    <a href="/bank_accounts" class="bank-accounts-form-button bank-accounts-form-button-secondary">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t('cancel') %>
    </a>
    
    <button type="submit" class="bank-accounts-form-button bank-accounts-form-button-primary">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <%= bank_account.persisted? ? t('update_account') : t('create_account') %>
    </button>
  </div>
<% end %>
