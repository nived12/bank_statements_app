<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <a href="/bank_accounts" class="mr-4 p-2 text-gray-400 hover:text-gray-600 transition-colors duration-200">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          </a>
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @bank_account.bank_name %></h1>
            <p class="mt-2 text-gray-600"><%= t('account_details') %></p>
          </div>
        </div>
        
        <div class="flex space-x-3">
          <a href="/bank_accounts/<%= @bank_account.id %>/edit" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <%= t('edit') %>
          </a>
          <a href="/statement_files/new" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
            </svg>
            <%= t('upload_statement') %>
          </a>
        </div>
      </div>
    </div>

    <!-- Account Overview -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Main Account Card -->
      <div class="lg:col-span-2 bg-white rounded-xl shadow-lg border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 003 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-2xl font-bold text-gray-900"><%= @bank_account.bank_name %></h2>
              <p class="text-gray-500">••••<%= @bank_account.account_number.last(4) %></p>
            </div>
          </div>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <%= @bank_account.currency %>
          </span>
        </div>
        
        <div class="text-center py-6">
          <p class="text-sm text-gray-600 mb-2"><%= t('current_balance') %></p>
          <p class="text-4xl font-bold text-gray-900">
            <%= number_to_currency(@bank_account.opening_balance, unit: "$") %>
          </p>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="space-y-6">
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('account_details_header') %></h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600"><%= t('bank') %></span>
              <span class="font-medium text-gray-900"><%= @bank_account.bank_name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600"><%= t('account_hash') %></span>
              <span class="font-medium text-gray-900"><%= @bank_account.account_number %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600"><%= t('currency') %></span>
              <span class="font-medium text-gray-900"><%= @bank_account.currency %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600"><%= t('created') %></span>
              <span class="font-medium text-gray-900"><%= @bank_account.created_at.strftime("%b %d, %Y") %></span>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('quick_actions') %></h3>
          <div class="space-y-3">
            <a href="/statement_files/new" class="w-full flex items-center justify-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
              </svg>
              <%= t('upload_statement') %>
            </a>
            <a href="/transactions" class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors duration-200">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <%= t('view_transactions') %>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('recent_activity') %></h3>
      <div class="text-center py-8">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h4 class="text-lg font-medium text-gray-900 mb-2"><%= t('no_recent_activity') %></h4>
        <p class="text-gray-600 mb-4"><%= t('upload_statement_help') %></p>
        <a href="/statement_files/new" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
          <%= t('upload_first_statement') %>
        </a>
      </div>
    </div>
  </div>
</div>
