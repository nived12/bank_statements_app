<!-- TRANSACTIONS PAGE: Transaction Management -->
<main class="transactions-page">
  <div class="transactions-main">
    
    <!-- HEADER SECTION: Page Title and Actions -->
    <header class="transactions-header">
      <div class="transactions-header-actions">
        <div class="transactions-header-left">
          <h1 class="transactions-header-title"><%= t('transactions_title') %></h1>
          <p class="transactions-header-subtitle"><%= t('transactions_description') %></p>
        </div>
        <div class="transactions-header-right">
          <a href="/statement_files/new" class="transactions-button transactions-button-primary">
            <svg class="transactions-button-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
            </svg>
            <%= t('upload_statement') %>
          </a>
        </div>
      </div>
    </header>

    <!-- FILTER SECTION: Search and Filter Options -->
    <section class="transactions-filters">
      <h3 class="transactions-filters-title"><%= t('filter_transactions') %></h3>
      <%= form_with url: "/transactions", method: :get, local: true, class: "transactions-filters-form" do %>
        <div class="transactions-filter-group">
          <label for="bank_account_id" class="transactions-filter-label"><%= t('bank_account_filter') %></label>
          <select name="bank_account_id" id="bank_account_id" class="transactions-filter-select" onchange="this.form.submit()">
            <option value=""><%= t('all_accounts') %></option>
            <% @bank_accounts.each do |ba| %>
              <option value="<%= ba.id %>" <%= "selected" if params[:bank_account_id].to_s == ba.id.to_s %>>
                <%= ba.bank_name %> - ••••<%= ba.account_number.last(4) %>
              </option>
            <% end %>
          </select>
        </div>
        
        <div class="transactions-filter-group">
          <% if params[:bank_account_id].present? %>
            <a href="/transactions" class="transactions-filter-button">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <%= t('clear_filter') %>
            </a>
          <% end %>
        </div>
      <% end %>
    </section>

    <!-- STATS OVERVIEW: Transaction Statistics -->
    <section class="transactions-stats">
      
      <!-- TOTAL TRANSACTIONS STAT -->
      <div class="transactions-stat-card">
        <div class="transactions-stat-content">
          <div class="transactions-stat-icon transactions-stat-icon-total">
            <svg class="transactions-stat-icon-svg transactions-stat-icon-svg-total" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div>
            <p class="transactions-stat-label"><%= t('total') %></p>
            <p class="transactions-stat-value transactions-stat-value-total"><%= @transactions.count %></p>
          </div>
        </div>
      </div>

      <!-- INCOME STAT -->
      <div class="transactions-stat-card">
        <div class="transactions-stat-content">
          <div class="transactions-stat-icon transactions-stat-icon-income">
            <svg class="transactions-stat-icon-svg transactions-stat-icon-svg-income" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <div>
            <p class="transactions-stat-label"><%= t('income') %></p>
            <p class="transactions-stat-value transactions-stat-value-income">
              <%= number_to_currency(@transactions.where(transaction_type: 'income').sum(:amount), unit: "$") %>
            </p>
          </div>
        </div>
      </div>

      <!-- EXPENSES STAT -->
      <div class="transactions-stat-card">
        <div class="transactions-stat-content">
          <div class="transactions-stat-icon transactions-stat-icon-expenses">
            <svg class="transactions-stat-icon-svg transactions-stat-icon-svg-expenses" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div>
            <p class="transactions-stat-label"><%= t('expenses') %></p>
            <p class="transactions-stat-value transactions-stat-value-expenses">
              <%= number_to_currency(@transactions.where(transaction_type: ['fixed_expense', 'variable_expense']).sum(:amount), unit: "$") %>
            </p>
          </div>
        </div>
      </div>

      <!-- CATEGORIES STAT -->
      <div class="transactions-stat-card">
        <div class="transactions-stat-content">
          <div class="transactions-stat-icon transactions-stat-icon-total">
            <svg class="transactions-stat-icon-svg transactions-stat-icon-svg-total" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <p class="transactions-stat-label"><%= t('categories') %></p>
            <p class="transactions-stat-value transactions-stat-value-total">
              <%= @transactions.joins(:category).distinct.count(:category_id) %>
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- TRANSACTIONS TABLE: Transaction List -->
    <% if @transactions.any? %>
      <section class="transactions-table-container">
        <div class="overflow-x-auto">
          <table class="transactions-table">
            <thead class="transactions-table-header">
              <tr>
                <th class="transactions-table-header-row"><%= t('date') %></th>
                <th class="transactions-table-header-row"><%= t('description') %></th>
                <th class="transactions-table-header-row transactions-table-header-row-right"><%= t('amount') %></th>
                <th class="transactions-table-header-row"><%= t('transaction_type') %></th>
                <th class="transactions-table-header-row"><%= t('category') %></th>
                <th class="transactions-table-header-row">Actions</th>
              </tr>
            </thead>
            <tbody class="transactions-table-body">
              <% @transactions.each do |transaction| %>
                <tr class="transactions-table-row">
                  <td class="transactions-table-cell">
                    <span class="transactions-table-cell-text">
                      <%= transaction.date.strftime("%b %d, %Y") %>
                    </span>
                  </td>
                  <td class="transactions-table-cell">
                    <div>
                      <div class="transactions-table-cell-text"><%= transaction.description %></div>
                      <% if transaction.bank_account %>
                        <div class="transactions-table-cell-account">
                          <%= transaction.bank_account.bank_name %> - ••••<%= transaction.bank_account.account_number.last(4) %>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="transactions-table-cell transactions-table-cell-amount">
                    <span class="<%= transaction.transaction_type == 'income' ? 'transactions-table-cell-amount-credit' : 'transactions-table-cell-amount-debit' %>">
                      <%= number_to_currency(transaction.amount, unit: "$") %>
                    </span>
                  </td>
                  <td class="transactions-table-cell">
                    <span class="transactions-category">
                      <%= transaction.transaction_type.humanize %>
                    </span>
                  </td>
                  <td class="transactions-table-cell">
                    <% if transaction.category %>
                      <span class="transactions-category">
                        <%= transaction.category.name %>
                      </span>
                    <% else %>
                      <span class="transactions-category-empty"><%= t('no_category') %></span>
                    <% end %>
                  </td>
                  <td class="transactions-table-cell">
                    <div class="transactions-actions">
                      <button onclick="openEditModal('<%= transaction.id %>')" class="transactions-action-button transactions-action-button-edit">
                        <%= t('edit') %>
                      </button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </section>
    <% else %>
      
      <!-- EMPTY STATE: No Transactions Yet -->
      <section class="transactions-empty">
        <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2zm0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h3 class="transactions-empty-title"><%= t('no_transactions_yet') %></h3>
        <p class="transactions-empty-description"><%= t('upload_statement_help') %></p>
        <a href="/statement_files/new" class="transactions-empty-action">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
          <%= t('upload_statement') %>
        </a>
      </section>
    <% end %>
  </div>
</main>

<!-- EDIT TRANSACTION MODAL: Transaction Edit Form -->
<div id="editModal" class="fixed inset-0 bg-slate-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-slate-900 mb-4"><%= t('edit_transaction') %></h3>
      <form id="editForm" method="post" class="space-y-4">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2"><%= t('merchant') %></label>
          <input type="text" name="transaction[merchant]" id="edit_merchant" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2"><%= t('reference') %></label>
          <input type="text" name="transaction[reference]" id="edit_reference" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2"><%= t('transaction_type') %></label>
          <select name="transaction[transaction_type]" id="edit_transaction_type" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <% Transaction.transaction_types.keys.each do |opt| %>
              <option value="<%= opt %>"><%= opt.humanize %></option>
            <% end %>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2"><%= t('category') %></label>
          <select name="transaction[category_id]" id="edit_category_id" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value=""><%= t('no_category') %></option>
            <% current_user.categories.order(:name).each do |cat| %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% end %>
          </select>
        </div>
        
        <div class="flex justify-end space-x-3 pt-4">
          <button type="button" onclick="closeEditModal()" class="px-4 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50 transition-colors duration-200">
            <%= t('cancel') %>
          </button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
            <%= t('save_changes') %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function openEditModal(transactionId) {
  // Set the form action
  document.getElementById('editForm').action = `/transactions/${transactionId}`;
  
  // Show the modal
  document.getElementById('editModal').classList.remove('hidden');
}

function closeEditModal() {
  document.getElementById('editModal').classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('editModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeEditModal();
  }
});
</script>
